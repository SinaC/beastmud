<UserControl x:Class="Beast.Editor.EditorTemplates.FileRepositoryEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignWidth="300" Height="56">
    <StackPanel>
		<TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Repository Path"/>
		<TextBox TextWrapping="Wrap" Text="{Binding DirectoryPath}" Margin="0,4,0,0"/>
            
	</StackPanel>
</UserControl>
